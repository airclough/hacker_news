<article>
<div class="post-header">
  <span id="<%= @post.id %>"></span>
  <h2><%= @post.title %></h2>
  <h4><a href="/user/<%= @post.user.id %>"><%= @post.user.username %></a> <small><%= date(@post.created_at) %></small> 

    <% if @post.post_id %><a href="/post/<%= @post.post_id %>">Parent</a><% end %>

  </h4>
</div>

<div class="post-body">
  <p><%= post_body %></p>
</div>
<% if session[:user_id] %>
<div class="make-comment">
  <input id="post-id" type="hidden" value="<%= @post.id %>">
  <div class="reply-button">Reply</div>
</div>
<% end %>
</article>


<div class="post-comments">
  <ul>
    <% @comments.each do |comment| %>
      <li><%= partial :_comment, :comment => comment %></li>
    <% end %>
  </ul>
</div>